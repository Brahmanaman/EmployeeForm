@model IEnumerable<EmployeeDetailsForm.Models.Employee>

@{
    ViewData["Title"] = "Index";
}


<div class="container">
    <div class="row">
        <div class="col-8 offset-2">
            <h1 class="text-center text-primary">Employee Details</h1>
            <a class="btn btn-sm btn-success m-2" asp-controller="Employee" asp-action="Create">Create</a>
            <p class="text-center text-success">@TempData["error"]</p>
               
            <table class="table table-bordered">
                <tr class="text-center">
                    <th>Name </th>
                    <th>City </th>
                    <th>State </th>
                    <th>Salary</th>
                    <th>Action </th>
                </tr>
                @foreach (var item in Model)
                {
                    <tr class="text-center">
                        <td>@item.Name</td>
                        <td>@item.City</td>
                        <td>@item.State</td>
                        <td>@item.salary</td>
                        <td>
                            <a class="btn btn-sm btn-warning" asp-controller="Employee" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a class="btn btn-sm btn-danger" asp-controller="Employee" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </table>
        </div>
    </div>
</div>









